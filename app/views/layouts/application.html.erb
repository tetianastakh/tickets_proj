<!DOCTYPE html>
<html>
  <head>
    <title>TicketsProj</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if logged_in? %>
      <ul>
        <li><%= link_to "Log out", managers_logout_path, method: :delete %></li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to "Log in", managers_login_path %></li>
      </ul>
    <% end %>
    <div>
      <% flash.each do |key, value| %>
        <div><%= value %></div>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
